<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PreferenceTitleStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primary</item> <!-- Replace with your desired color -->
    </style>



    <style name="DetailsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#B0B0B0</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>

    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="FuturisticTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@color/primary</item>
        <item name="android:paddingBottom">4dp</item>


    </style>

    <style name="ShapeAppearance.TasteFolio.Corner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item> <!-- or any size -->
    </style>
    <!-- In both styles.xml (normal and night) -->

    <style name="TextInputLayoutRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>





</resources>
